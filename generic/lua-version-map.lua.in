-- Map e2-versions to Lua interpreter versions


lua_versions = {
  [ "1" ] = "5.1.2",
  [ "2" ] = "5.1.3",
  latest = "@LUA_VERSION@"
}

function lua_versions.get_version(e2_version)
  local v = e2_version or E2_VERSION
  local lv = lua_versions[ v ]
  return lv or lua_versions.latest
end
